{
  "expo": {
    "name": "Pager2077",
    "slug": "pager2077",
    "scheme": "pager2077",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/appicon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/pagersplash.png",
      "resizeMode": "contain",
      "backgroundColor": "#C7D3C0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pager2077v1.app",
      "appleTeamId": "C5682GULYK",
      "buildNumber": "5",
      "deploymentTarget": "18.0",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSSupportsLiveActivities": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#C7D3C0"
      },
      "package": "com.pager207v1.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-notifications",
        {
          "icon": "./assets/appicon.png",
          "color": "#C7D3C0"
        }
      ],
      "expo-secure-store",
      "./plugins/withLiveActivity"
    ]
  }
}
